{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "@actions": ["app/actions"],
      "@actions/*": ["app/actions/*"],
      "@components": ["app/components"],
      "@components/*": ["app/components/*"],
      "@middleware": ["app/middleware"],
      "@middleware/*": ["app/middleware/*"],
      "@models": ["app/models"],
      "@models/*": ["app/models/*"],
      "@reducers": ["app/reducers"],
      "@reducers/*": ["app/reducers/*"],
      "@store": ["app/store"],
      "@store/*": ["app/store/*"],
      "@utils": ["app/utils"],
      "@utils/*": ["app/utils/*"],
      "@helpers": ["app/helpers"],
      "@helpers/*": ["app/helpers/*"],
      "@assets": ["assets"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
